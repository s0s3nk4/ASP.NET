@using Lab_ASP.Models.ViewModels
@model EquipmentDetailViewModel

@{
    ViewData["Title"] = "Szczegóły pojazdu";
}

<h1>@Model.Make @Model.Model</h1>

<div class="row">
    <div class="col-md-6">
        <img src="@Model.ImgURL" class="img-fluid rounded" alt="@Model.Make @Model.Model" />
    </div>
    <div class="col-md-6">
        <h3>Informacje</h3>
        <p><strong>Rok produkcji: </strong>@Model.Year</p>
        <p><strong>Opis: </strong>@Model.Description</p>
        <p><strong>Typ: </strong>@Model.EquipmentType</p>
        <a href="@Url.Action("Index", "Equipment")" class="btn btn-primary">Powrót</a>
    </div>
</div>